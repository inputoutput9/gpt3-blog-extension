{
  "name": "Instant Startup Pitch Generator",
  "description": "Input your startup idea. Instantly get an elevator pitch.",
  "version": "2.0",
  "manifest_version": 3,
  "icons": {
    "16": "assets/favicon16.png",
    "24": "assets/favicon24.png",
    "32": "assets/favicon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Generate Elevator Pitch"
  },
  "background": {
    "service_worker": "scripts/contextMenuServiceWorker.js"
  },
  "permissions": ["contextMenus", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
